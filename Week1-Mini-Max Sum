class Result {
   public static void miniMaxSum(List<Integer> arr) {
        int n=arr.size();
        Collections.sort(arr);
        long min=arr.get(0);
        long max =arr.get(n-1);
        long sum=0;
        for(int i=0;i<n;i++){
            sum+=arr.get(i);
            
        }
        long s1=sum-max;
        long s2=sum-min;
        System.out.println(s1+" "+s2);             
    }
